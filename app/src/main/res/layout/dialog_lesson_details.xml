<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Режим просмотра -->
        <LinearLayout
            android:id="@+id/viewFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Заголовок и кнопка редактирования -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/lessonSubjectText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Название предмета"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✏️"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

            <!-- Описание типа занятия -->
            <TextView
                android:id="@+id/lessonDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Тип занятия"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="8dp" />

            <!-- Информация в карточках -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- День и время -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/lessonDayText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="День"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lessonTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Время"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Тип и преподаватель -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/lessonTypeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Тип занятия"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/lessonTeacherText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Преподаватель"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Местоположение -->
                    <TextView
                        android:id="@+id/lessonLocationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Аудитория"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Группа -->
                    <TextView
                        android:id="@+id/lessonGroupText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Группа"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Автор -->
                    <TextView
                        android:id="@+id/lessonAuthorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Автор"
                        android:textSize="12sp"
                        android:textColor="#666" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Режим редактирования -->
        <LinearLayout
            android:id="@+id/editFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Кнопка отмены редактирования -->
            <Button
                android:id="@+id/cancelEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❌ Отменить"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Поля редактирования -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:counterMaxLength="100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Название предмета *"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:counterMaxLength="100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ФИО преподавателя *"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:counterMaxLength="50">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editClassroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Аудитория *"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:counterMaxLength="50">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Группа"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Информация о занятии (только для чтения) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/light_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Информация о занятии"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/editDayInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="День: Понедельник"
                        android:textSize="12sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/editTimeInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Время: 08:30 - 10:00"
                        android:textSize="12sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/editTypeInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Тип: Лекция"
                        android:textSize="12sp"
                        android:textColor="#666" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Подсказка -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* - обязательные поля"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>